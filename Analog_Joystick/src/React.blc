import ajs "Analog_Joystick"
import display "MAX_72XX"
import ut "utils"

@[EntryPoint]
activity main ()
  var d = display.init()
  repeat
    let x = ajs.read_direction()
    if x.d > 0 then
      display.display_direction(x.d)(d)
    end
    run ut.delay(1000)
    display.erase_display()(d)
  end
end