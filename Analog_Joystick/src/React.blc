import ajs "Analog_Joystick"
import display "MAX_72XX"
import ut "utils"

@[EntryPoint]
activity main ()
  var d = display.init()
  repeat
    let x = ajs.read_direction()
    if ajs.is_nontrivial(x) then
      display.display_direction(ajs.dir_to_index(x))(d)
    end
    run ut.delay(1000)
    display.erase_display()(d)
  end
end